<Window x:Class="CBD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CBD"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="StartBtn" Content="Start" Margin="164,120" FontSize="30" Click="Start_Click"/>
        <ProgressBar x:Name="LoadingBar" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="189" Margin="164,121,0,0"/>
        <Button x:Name="CancelLoadBtn" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="189" Margin="164,171,0,0" Height="28" FontSize="14" FontWeight="Bold" Click="CancelLoadBtn_Click"/>
        <Label x:Name="resultLb" Content="" Margin="214,35,215,0" VerticalAlignment="Top" Height="39" FontSize="20"/>
        <Button x:Name="ResultsBtn" Content="See Results" Margin="164,120" FontSize="30" Click="ResultsBtn_Click"/>
        <DataGrid x:Name="ResultsGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Height="309" Width="507" AlternatingRowBackground="Gainsboro"  AlternationCount="2"/>

    </Grid>
</Window>
